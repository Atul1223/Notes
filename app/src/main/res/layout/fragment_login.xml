<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment"
    android:background="#00FFFFFF">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connect_loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/vector_not_connect"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/btn_login_in"
        android:layout_width="250dp"
        android:layout_height="250dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login_in"
        android:text="Sign-In"
        android:textColor="#FFEA4335"
        android:textSize="30sp"
        android:background="@drawable/state_button_normal"
        android:fontFamily="@font/sketch_font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="200dp"
        android:layout_width="180dp"
        android:layout_height="70dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>